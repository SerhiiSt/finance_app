<p style="color: green"><%= notice %></p>
<%= link_to "New category", new_category_path, class:"btn btn-primary" %>
<div class="container">
  <div class="page-header">
    <h1>Category</h1>
  </div>
</div>
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Name of Category</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <%= render category %>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @categories %>
