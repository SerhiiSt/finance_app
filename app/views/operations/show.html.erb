<p style="color: green"><%= notice %></p>
<%= render @operation %>
<div class="show_operations">
  <%= link_to "Edit this operation", edit_operation_path(@operation), class:"btn btn-info" %>
  <%= link_to "Back to operations", operations_path, class:"btn btn-warning" %>
  <%= button_to "Destroy this operation", @operation, method: :delete, class:"btn btn-danger" %>
</div>
